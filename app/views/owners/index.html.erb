<p id="notice"><%= notice %></p>

<h1>Listing Owners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.club_id %></td>
        <td><%= link_to 'Show', owner,class:"btn btn-info btn-xs btn-block" %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner),class:"btn btn-info btn-xs btn-warning" %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-info btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

