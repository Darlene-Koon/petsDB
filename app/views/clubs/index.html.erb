<p id="notice"><%= notice %></p>

<h1>Listing Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= link_to 'Show', club,class:"btn btn-info btn-xs btn-block" %></td>
        <td><%= link_to 'Edit', edit_club_path(club),class:"btn btn-info btn-xs btn-block" %></td>
        <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-info btn-xs btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

